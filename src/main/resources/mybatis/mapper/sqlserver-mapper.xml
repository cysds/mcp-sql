<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cysds.dao.ISqlserverDao">

    <!-- 结果映射，把列名映射到实体属性 -->
    <resultMap id="SqlserverConnMap" type="com.cysds.domain.entity.SqlServerConnectionEntity">
        <result property="type"     column="type" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="host"     column="host" />
        <result property="port"     column="port" />
        <result property="database" column="database_name" />
    </resultMap>

    <!-- 插入，生成主键后回填到 entity.id -->
    <insert id="InsertSqlserverConn"
            parameterType="com.cysds.domain.entity.SqlServerConnectionEntity"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO tb_sqlserver_conn
            (type, username, password, host, port, database_name)
        VALUES
            (#{type},
             #{username},
             #{password},
             #{host},
             #{port},
             #{database})
    </insert>

    <!-- 查询所有 -->
    <select id="ListSqlserverConn"
            resultMap="SqlserverConnMap">
        SELECT
            type,
            username,
            host,
            port,
            database_name
        FROM tb_sqlserver_conn
    </select>

    <select id="getSqlserverConnByUserAndDb"
            resultMap="SqlserverConnMap"
            parameterType="map">
        SELECT
            type,
            username,
            password,
            host,
            port,
            database_name
        FROM tb_sqlserver_conn
        WHERE username = #{username}
          AND database_name = #{databaseName}
    </select>

</mapper>
