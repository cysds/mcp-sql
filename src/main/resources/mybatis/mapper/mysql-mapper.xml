<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cysds.dao.IMysqlDao">

    <!-- 结果映射，把列名映射到实体属性 -->
    <resultMap id="MysqlConnMap" type="com.cysds.domain.entity.MysqlConnectionEntity">
        <result property="type"     column="type" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="host"     column="host" />
        <result property="port"     column="port" />
        <result property="database" column="database_name" />
    </resultMap>

    <!-- 插入，生成主键后回填到 entity.id -->
    <insert id="InsertMysqlConn"
            parameterType="com.cysds.domain.entity.MysqlConnectionEntity"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO tb_mysql_conn
            (type, username, password, host, port, database_name)
        VALUES
            (#{type},
             #{username},
             #{password},
             #{host},
             #{port},
             #{database})
    </insert>

    <!-- 查询所有 -->
    <select id="ListMysqlConn"
            resultMap="MysqlConnMap">
        SELECT
            id,
            type,
            username,
            password,
            host,
            port,
            database_name
        FROM tb_mysql_conn
    </select>

    <!-- 根据主键查询 -->
    <select id="SelectMysqlConn"
            parameterType="int"
            resultMap="MysqlConnMap">
        SELECT
            id,
            type,
            username,
            password,
            host,
            port,
            database_name
        FROM tb_mysql_conn
        WHERE id = #{id}
    </select>

</mapper>
